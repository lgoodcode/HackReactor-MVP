{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
    },
  },
  "exclude": ["node_modules"]
}
